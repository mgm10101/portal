interface DeductionConfigProps {
  config: {
    id: string;
    name: string;
    percentage: number;
    earningType: string;
    hasBands: boolean;
    bands: Array<{ id: string; min: number; max: number | null; percentage: number }>;
    paidBy: {
      employer: number;
      employee: number;
    };
    limits: {
      type: 'deduction' | 'earning';
      lower: number | null;
      upper: number | null;
    };
  };
  isEditing: boolean;
  onToggleEdit: () => void;
  onUpdateConfig: (id: string, field: string, value: any) => void;
  onDeleteConfig: (id: string) => void;
  onUpdateBand: (configId: string, bandId: string, field: string, value: any) => void;
  onAddBand: (configId: string) => void;
  onDeleteBand: (configId: string, bandId: string) => void;
}

const arePropsEqual = (prevProps: DeductionConfigProps, nextProps: DeductionConfigProps) => {
  return (
    prevProps.config.id === nextProps.config.id &&
    prevProps.config.name === nextProps.config.name &&
    prevProps.config.percentage === nextProps.config.percentage &&
    prevProps.config.earningType === nextProps.config.earningType &&
    prevProps.config.hasBands === nextProps.config.hasBands &&
    JSON.stringify(prevProps.config.bands) === JSON.stringify(nextProps.config.bands) &&
    JSON.stringify(prevProps.config.paidBy) === JSON.stringify(nextProps.config.paidBy) &&
    JSON.stringify(prevProps.config.limits) === JSON.stringify(nextProps.config.limits) &&
    prevProps.isEditing === nextProps.isEditing
  );
};

